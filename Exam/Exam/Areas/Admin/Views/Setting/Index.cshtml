@model List<Setting>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card mx-auto">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Key
                            </th>
                            <th>
                                Value
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Setting item in Model)
                        {
                            count++;
                            <tr>
                                <td class="py-1">
                                    @count
                                </td>
                                <td>
                                    @item.Key
                                </td>
                                <td>
                                    @item.Value
                                </td>
                                <td>
                                    <a asp-action="update" asp-area="admin" asp-controller="setting" asp-route-id="@item.id" type="button" class="btn btn-warning">Update</a>
                                </td>
                            </tr>


                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





